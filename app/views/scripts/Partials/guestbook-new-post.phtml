				</td>
			</tr>
			<tr>
				<td>
					<label for="site"><?= $this->translate('label.site'); ?>: </label>
				</td>
				<td>
					<input type="url" id="site" name="site" value="<?= (isset($this->postData['site'])) ? $this->escape($this->postData['site']) : ''; ?>" placeholder="<?= $this->translate('label.site'); ?>" maxlength="255"/><br>
