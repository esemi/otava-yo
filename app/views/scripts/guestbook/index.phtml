		<header>
			<span class="name title-em"><?= $this->escape($item->author); ?></span>
			<? if( !empty($item->city) ): ?>
				<span class="city">(<?= $this->escape($item->city); ?>)</span>
			<? endif; ?>
			<? if( !empty($item->email) ): ?>
