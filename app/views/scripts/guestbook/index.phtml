<section class="field-bg">
	<h2 class="title-page-name text-center">Гостевая книга</h2>
	<p class="js-guestbook-add-button">@TODO BUTTON</p>
	<div class="js-guestbook-add-form  <?= (empty($this->postData)) ? 'hide' : ''; ?>">
		<? if( !empty($this->errorMessage) ): ?>
			<div><?= $this->escape($this->errorMessage); ?></div>
		<? endif; ?>
		<?= $this->partial('Partials/guestbook-new-post.phtml', array('postData' => $this->postData,'recaptcha' => $this->recaptcha)); ?>
