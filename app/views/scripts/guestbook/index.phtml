			<? if( !empty($item->site) ): ?>
				<a class="site" href="<?= $this->escape($item->site); ?>" target="_blank" rel="nofollow">сайт</a>
			<? endif; ?>
			<time><?= $this->escape($item->date_publish); ?></time>
		</header>
		<p>
			<?= $this->escape($item->content); ?>
